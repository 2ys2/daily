import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.HashMap;
import java.util.StringTokenizer;

public class Main0608 {
	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		StringTokenizer st;
		HashMap<String, Integer> hm = new HashMap<>();
		int cnt = 0;
		String temp1 = null;
		String temp2 = null;

		//사람들 만난 기록 수
		int N = Integer.parseInt(br.readLine());
		for ( int i = 0; i < N; i++ ) {
			st = new StringTokenizer(br.readLine());
			String name1 = st.nextToken();
			String name2 = st.nextToken();
			
			//1. name1 == ChongChong
			if (name1.equals("ChongChong")) {
				cnt = 1;
			}
			if (temp2 != null && !temp2.equals(name1)) {
				cnt = 0;
			}
			temp2 = name2;
			
			//2. name2 == ChongChong
			
			if (name2.equals("ChongChong")) {
				cnt = 1;
			}
			temp1 = name1;
			if (temp1 != null && !temp1.equals(name1)) {
				cnt = 0;
			}
			
			System.out.println(i + "번 temp1 : " + temp1+ ", temp2 : " + temp2 + ", name1 : " + name1+", name2 : " + name2);
			hm.put(name1, cnt);
			hm.put(name2, cnt);
			System.out.println(i + "번 temp1 : " + temp1+ ", temp2 : " + temp2 + ", cnt : " + cnt);
		}
		int sum = 0;
		for ( String key : hm.keySet()) {
			System.out.println("key : "+key + ", "+ hm.get(key));
			sum += hm.get(key);
		}
		System.out.println(sum);
	}
}
